{
  "name": "claude-coding-tools",
  "version": "1.0.0",
  "description": "A comprehensive suite of tools to enhance Claude's coding capabilities",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "claude-coding-tools": "./dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "build:mcp": "tsc && node -e \"require('fs').chmodSync('dist/mcp-server.js', '755')\" || echo Built",
    "dev": "tsc --watch",
    "test": "npx jest",
    "test:watch": "npx jest --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "start:mcp": "node dist/mcp-server.js"
  },
  "keywords": [
    "claude",
    "ai",
    "coding-tools",
    "mcp",
    "model-context-protocol",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.8.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "glob": "^10.3.10",
    "minimatch": "^9.0.3"
  }
}
